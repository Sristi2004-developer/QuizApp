<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.otheractivities.QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question 5/10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:id="@+id/question_indicator" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:03"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/timer"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/timer"
            app:tint="@color/black"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/timer"
            android:layout_centerVertical="true"

            />


    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginVertical="8dp"
        tools:progress="50"
        android:id="@+id/question_progress_indicator"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="6dp"
        android:layout_weight="1"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/question_textview"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FF9800"
                android:padding="8dp"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="What is the capital of India?"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D9C5C5"
                android:paddingVertical="12dp"
                tools:text="Option A"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D9C5C5"
                android:paddingVertical="12dp"
                tools:text="Option B"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="start"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D9C5C5"
                android:paddingVertical="12dp"
                tools:text="Option C"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="start"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D9C5C5"
                android:paddingVertical="12dp"
                tools:text="Option D"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#FF9800"
                android:padding="8dp"
                android:paddingVertical="12dp"
                android:layout_gravity="end"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="20sp"
                />










        </LinearLayout>

    </androidx.cardview.widget.CardView>



    </LinearLayout>